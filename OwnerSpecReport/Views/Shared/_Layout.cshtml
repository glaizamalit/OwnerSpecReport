@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/kendo/2021.3.914/kendo.bootstrap-v4.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />    
    <script src="~/Scripts/kendo/2021.3.914/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/kendo/2021.3.914/kendo.all.min.js"></script>
    <script src="~/Scripts/kendo/2021.3.914/kendo.timezones.min.js"></script>
    <script src="~/Scripts/kendo/2021.3.914/jszip.min.js"></script>
</head>
<body class="k-content">
    <div id="loaderNew" style="display:none; position: fixed; width: 100%; height: 100%; background-color: #ffffff73; z-index: 999; vertical-align:middle;">
        <img src="../Images/loader.gif" style="position: absolute; left: 50%; top: 50%; -webkit-transform: translate(-50%, -50%); transform: translate(-50%, -50%);">
    </div>
    <nav id="navbar-top" class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container p-0 p-sm-3" style="max-width:95%;">
            <a class="navbar-brand" href="/"><img src="~/images/Wallem_logo200x37.png" /></a>
            <div style="text-align: left; margin: 0 0 0 250px; position: absolute " id="apptitle">
                <h8 style="color: darkblue;"><b>Owner Specific Report</b></h8>
            </div>
            <button id="configure" class="k-rpanel-toggle k-button k-primary btn-toggle"><span class="k-icon k-i-menu"></span></button>
            <div id="responsive-panel" class="navbar-left">
                <div class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link" href="../Home/Index" id="navHome" role="button" aria-haspopup="true" aria-expanded="false">
                            Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" aria-haspopup="true" aria-expanded="false">
                            Table Maintenances
                        </a>
                        <div class="dropdown-menu m-0" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/ManualAccrual">Manual Accrual</a>
                            <a class="dropdown-item" href="/FundingData">Funding Data Refresh</a>
                            <a class="dropdown-item" href="/ChargeSetup">RealMarine Charge Setup</a>
                            <a class="dropdown-item" href="/RMInvoice">RealMarine Invoice</a>
                        </div>                        
                    </li>
                    <li class="nav-item" id="navlogout">
                        @{
                            var username = "";
                            username = HttpContextAccessor.HttpContext.Session.GetString("UserFullName");
                        }
                        <div class="nav-link">
                            Hi @username |&nbsp; <a href="http://sso.wallem.com/logout"><span style="color:#282828;" class="k-icon k-i-logout" id="LogOut" data-toggle="tooltip" title="Log Out"></span></a>
                        </div>
                    </li>
                </div>
            </div>
        </div>




        @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>*@
    </nav>
    <main>
        <div class="container-fluid" style="width:95%!important;">
            @RenderBody()
        </div>
    </main>

    <footer class="footer text-center d-flex align-items-center">
        <div class="container-fluid">
            <p class="text-muted">Copyright © @DateTime.Now.Year Wallem Group. All Rights Reserved.</p>
        </div>
    </footer>
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    .navbar-nav li:hover .dropdown-menu {
        display: block;
    }
</style>